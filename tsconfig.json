{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "test"]
}
